<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatDetail">

    <ScrollView
        android:id="@+id/scrollViewCatDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/catNameTVD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cat Name"
                android:textSize="34sp"
                android:textColorLink="#476cc9"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/catImageTVD"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/catNameTVD"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/catDescriptionTitleTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                app:layout_constraintTop_toBottomOf="@id/catNameTVD"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ScrollView
                android:id="@+id/catDescriptionSV"
                android:layout_width="170dp"
                android:layout_height="145dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/catDescriptionTitleTV"
                app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                    android:id="@+id/catDescriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the description text"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

            </ScrollView>

            <ImageView
                android:id="@+id/favouriteImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="85dp"
                app:layout_constraintTop_toBottomOf="@+id/catImageTVD"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/catWeightLabel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/catWeightTV"/>

            <TextView
                android:id="@+id/catWeightTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cat Weight"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/catWeightLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/favouriteImage"/>

            <TextView
                android:id="@+id/catTemparamentLabel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Temperament"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/catTemparamentTV"/>

            <TextView
                android:id="@+id/catTemparamentTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cat Temperamnet"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/catTemparamentLabel"
                app:layout_constraintTop_toBottomOf="@+id/catWeightTV"/>

            <TextView
                android:id="@+id/catOriginLabel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Origin"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/catOriginTV"/>

            <TextView
                android:id="@+id/catOriginTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cat Origin"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/catOriginLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catTemparamentTV"/>

            <TextView
                android:id="@+id/catLifespanLabel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Lifespan"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cateLifespanTV"/>

            <TextView
                android:id="@+id/cateLifespanTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cat Lifespan"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/catLifespanLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catOriginTV"/>

            <TextView
                android:id="@+id/catDogFriendlinessLevelLabel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Dog Friendliness Level"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/catDogFriendlinessLevelTV"/>

            <TextView
                android:id="@+id/catDogFriendlinessLevelTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cat Dog Friendliness"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/catDogFriendlinessLevelLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cateLifespanTV"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/catNotFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="28sp"
        android:text="THERE IS NO DATA FOR THIS CAT. PLEASE SEARCH FOR ANOTHER CAT."
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

